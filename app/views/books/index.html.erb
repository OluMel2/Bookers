<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="./assets/books.css">
  </head>
  <body>
    <h1>Books</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
        </tr>
        <% @books.each do |list| %>
        <tr>
          <td><%= list.title %></td>
          <td><%= list.body %></td>
          <td>Show</td>
          <td>Edit</td>
          <td>Destroy</td>
          
        </tr>
          <% end %>

        
      </thead>
    </table>
    <h2>New book</h2>
    <%= form_with model: @book do |f| %>
    <div class="field">
      <h4>Title</h4>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <h4>Body</h4>
      <%= f.text_area :body %>
    </div>

    <div class="actions">
    <%= f.submit 'Create Book' %>
    </div>

    <% end %>
  </body>
</html>